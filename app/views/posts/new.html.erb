<h1>Create new Posts</h1>
<%= form_with url: posts_path , scope: :post, local: true do |form| %>

  <p>
    <%= form.label :title %>
    <br/>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br/>
    <%= form.text_area :description %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>