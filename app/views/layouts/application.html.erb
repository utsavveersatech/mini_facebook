<!DOCTYPE html>
<html>
  <head>
    <title>MiniFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <%= link_to current_user.email, root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            
            <li class="nav-item">
              <%= link_to "Find Friends", friends_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Following ", get_followings_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Followers", get_followers_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Friend Requests", requests_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Create Post", new_post_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Post", my_post_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link active text-danger" %>
            </li>
            
          </ul>
        </div>
      </div>
    </nav>
      
    <% end %>

    <%= yield %>
  </body>
</html>
